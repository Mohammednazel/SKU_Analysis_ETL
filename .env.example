# Database
DATABASE_URL=postgresql://postgres:password@postgres:5432/procurementdb

# Data Source
DATA_SOURCE_URL=https://procurement-sku-analysis-mock.onrender.com/purchase-orders

# ETL
MODE=daily
HISTORICAL_TRUNCATE=false
RATE_LIMIT_DELAY=0.2
INCREMENTAL_DAYS=1
TARGET_TABLE=purchase_orders
REFRESH_SUMMARIES=true
TAKE_DAILY_SNAPSHOT=false

# Alerts
ENABLE_EMAIL_ALERTS=false
ALERT_EMAILS=you@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=example@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_STARTTLS=true
ALERT_FROM=etl-monitor@example.com

# Alert Heuristics
MAX_RUNTIME_SECONDS=900
MIN_DAILY_EXPECTED_ROWS=1
BASELINE_WINDOW=10
WATCHDOG_MAX_AGE_HOURS=24

# API
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
CORS_ORIGINS=*

#  Authentication
API_SECRET_KEY=supersecureapikey_2025
